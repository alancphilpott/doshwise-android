<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="phil.alan.doshwise.view_expenses">

    <Button
        android:id="@+id/btn_expenses"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:text="expenses"
        android:textColor="@android:color/primary_text_light"
        android:background="@android:color/transparent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_split"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="split"
        android:textColor="@android:color/primary_text_light"
        app:layout_constraintLeft_toRightOf="@+id/btn_expenses"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/btn_history"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_history"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="history"
        android:layout_marginRight="8dp"
        android:textColor="@android:color/primary_text_light"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_addExpense"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="@android:color/primary_text_light"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp" />

    <ListView
        android:id="@+id/expensesList"
        android:layout_width="385dp"
        android:layout_height="370dp"
        android:layout_marginBottom="71dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.47" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="527dp"
        android:layout_height="185dp"
        app:srcCompat="@drawable/rectangle"
        android:layout_marginRight="-131dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="353dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_split" />

</android.support.constraint.ConstraintLayout>