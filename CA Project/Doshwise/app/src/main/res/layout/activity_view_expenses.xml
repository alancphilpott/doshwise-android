<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="phil.alan.doshwise.view_expenses">

    <Button
        android:id="@+id/btn_expenses"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:text="expenses"
        tools:layout_editor_absoluteY="16dp"

        android:textColor="@android:color/holo_orange_dark"
        android:background="@android:color/transparent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_split"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="split"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_expenses"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/btn_history"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/btn_history"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="history"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_addExpense"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp" />

    <ListView
        android:id="@+id/expensesList"
        android:layout_width="384dp"
        android:layout_height="430dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_split"
        app:layout_constraintVertical_bias="0.555"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

</android.support.constraint.ConstraintLayout>