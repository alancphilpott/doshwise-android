<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="phil.alan.doshwise.view_history">

    <Button
        android:id="@+id/btn_expenses"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:text="expenses"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_split"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="split"
        app:layout_constraintLeft_toRightOf="@+id/btn_expenses"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/btn_history"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_history"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="history"
        android:textColor="@android:color/primary_text_light"
        android:background="@android:color/transparent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ListView
        android:id="@+id/expensesList"
        android:layout_width="383dp"
        android:layout_height="439dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        tools:layout_editor_absoluteY="72dp"
        tools:layout_editor_absoluteX="2dp" />

</android.support.constraint.ConstraintLayout>
